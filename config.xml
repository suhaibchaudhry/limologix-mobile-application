<?xml version='1.0' encoding='utf-8'?>
<widget id="com.limologix.driverapp" version="1.6.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Limo Logix</name>
    <description>
        Limo Logix is a unique ecosystem limo drivers and dispatch companies alike.
    </description>
    <author email="support@limologix.com" href="http://www.limologix.com">
        Limo Logix Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="*">
    <variable name="CAMERA_USAGE_DESCRIPTION" value="App would like to access the camera." />
    <variable name="MICROPHONE_USAGE_DESCRIPTION" value="App would like to access the microphone." />
    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="App would like to access the library." />
    </plugin>
    <preference name="cordova-background-geolocation-license" value="782e13a5d5283b482680cc66802b72c5d23c4c412612b35abbb9f0e82a0747d3" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
